<h1>Importações</h1>

<div class="text-end mt-3 mb-3">
    <%= link_to 'Nova Importação', new_import_file_path, class: "btn btn-primary" %>
</div>

<section>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div class="row mt-3 mb-3">
            <div class="col-6">
              <h4 class="text-center">Total de vendas</h5>
              <p class="text-center">
                <%= import_total_amount %>
              </p>
            </div>
            <div class="col-6">
              <h4 class="text-center">Ultima Importação</h5>
              <p class="text-center">
                <%= import_last_import_amount %>
              </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section>
  <div id="import-list mt-3">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Descrição</th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @import_files.each do |file| %>
            <tr>
              <td><%= file.id %></td>
              <td><%= import_title(file) %></td>
              <td>
                <%= link_to file, class: "btn btn-success" do %>
                  <span>
                    <i class="bi bi-search"></i>
                  </span>
                <%end%>
              </td>
              <td>
                <%= link_to file, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' }  do %>
                  <span>
                    <i class="bi bi-trash"></i>
                  </span>
                <%end%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</section>
